<div class="container"><br>
  <h4>My Projects</h4>
  <div class="row">
    <% projects.forEach( projects =>{ %>
      <div class="col-md-3 m-t">
        <div class="card">
          <img class="card-img-top" src="<%= projects.photo %>">
          <div class="card-body">
            <h5><%= projects.title %></h5>
            <span><%= projects.description %></span><br>
          </div>
            <div class="card-footer">
              <a href="<%= projects.url %>">Projeyi görüntüle</a>
              </div>
        </div>
      </div>
    <% }) %>
  </div>
</div>
<style>
  .m-t{margin-top:1.3vh}
  .card-img-top{
    border-top-left-radius:4px;
    border-top-right-radius:4px;
    border-bottom-left-radius:0px;
    border-bottom-right-radius:0px;
    height:25vh;
    outline:#dededf 1px solid;
  }
  .card{height:46.5vh;margin-bottom:1.5vh;}
</style>
